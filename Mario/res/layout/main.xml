<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/install"
    >
    <TextView
    	android:typeface="monospace"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginLeft="120dip"
    	android:layout_marginTop="70dip"
    	android:paddingRight="10dip"
    	android:text="This is a home-screen widget. To Install, press Menu -> Add -> Widget in Home Screen"
    	android:textColor="#000"
    	android:textSize="18dip"
    	/>
   	<TextView
    	android:typeface="monospace"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginLeft="120dip"
    	android:layout_marginTop="10dip"
    	android:paddingRight="10dip"
    	android:text="You can also get the respective wallpaper by clicking the button below"
    	android:textColor="#000"
    	android:textSize="12dip"
    	/>
	<Button android:text="Get Set-up" 
		android:layout_marginLeft="120dip"
    	android:layout_marginTop="10dip"	
		android:id="@+id/setbutton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:onClick="mOnClick">
	</Button>

	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >

	    <TextView
	        android:id="@+id/time0"
	        android:layout_width="150dp"
	        android:layout_height="50dp"
	        android:layout_weight="0.88"
	        android:gravity="center"
	        android:textSize="30dp" />

	    <Button
	        android:id="@+id/reset1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:onClick="mOnClick"
	        android:text="초기화" />
	</LinearLayout>
	
	
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >

	    <Button
	        android:layout_width="0px"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:text="Start"
       		android:id="@+id/btn_start" 
       		android:onClick="mOnClick" />
	    <Button
	        android:layout_width="0px"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:text="Pause"
       		android:id="@+id/btn_pause"
       		android:onClick="mOnClick"  />		    
	    <Button
	        android:layout_width="0px"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:text="Stop"
       		android:id="@+id/btn_stop"
       		android:onClick="mOnClick"  />	
	</LinearLayout>
   
</LinearLayout>
