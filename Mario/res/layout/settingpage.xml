<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    
     android:background="#FFffffff">
     

    


<LinearLayout     
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dip"
    android:orientation="vertical"    
      >
    
     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:orientation="horizontal"  >
        
        
          
 	   <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:textSize="30dp"
        android:gravity="center"
        android:id="@+id/time" /> 
        
 	   <Button
        android:id="@+id/reset0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="mOnClick"
        android:text="초기화" />
    
         
   
 	  </LinearLayout>    
 	   
  
   		 <TextView    
        android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text = "고유번호"
	    android:textSize = "11dip"
	    android:textStyle = "bold"
		android:textColor = "#ff282CB6"
		android:layout_marginTop="20dip"
		 />
  
        <EditText
            android:id="@+id/input01"
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:textSize="14sp" >

		</EditText>


	
    
    
 
    <TextView    
        android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text = "제조사"
	    android:textSize = "11dip"
	    android:textStyle = "bold"
		android:textColor = "#ff282CB6"
		android:layout_marginTop="10dip"
		 />
   
  

    <Spinner
        android:id="@+id/myspinner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    

    
     <TextView    
        android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text = "구입년도"
	    android:textSize = "11dip"
	    android:textStyle = "bold"
		android:textColor = "#ff282CB6"
		android:layout_marginTop="10dip"
		 />
   
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
         >
    <Spinner
        android:id="@+id/myspinner2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView    
        android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text = "~"
	    android:textSize = "11dip"
	    android:textStyle = "bold"
		android:textColor = "#ff000000"
		 />
    <Spinner
        android:id="@+id/myspinner3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="28dip"
        android:layout_height="28dip"
        android:adjustViewBounds="true"        
        android:src="@drawable/reset"
        android:id="@+id/reset3"               
        android:onClick="mOnClick"
        android:clickable="true"
         />
    </LinearLayout>    
    
  
    
    
		
        
        
        <TextView    
        android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text = "귀여움성"
	    android:textSize = "11dip"
	    android:textStyle = "bold"
		android:textColor = "#ff282CB6"
		android:layout_marginTop="20dip"
		 />
        
    
        <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:orientation = "vertical"            
        >    
        
      	    <LinearLayout 
                android:layout_width="wrap_content"
      		    android:layout_height="wrap_content"> 
            <CheckBox 
                android:id="@+id/kind1"
                android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="Sparkling"
        		android:onClick="mOnClick"/>

            <CheckBox
                android:id="@+id/kind2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="White    "
                android:onClick="mOnClick" />

            <CheckBox 
                android:id="@+id/kind3"
                android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="Rose"
        		android:onClick="mOnClick"/>
       	    </LinearLayout>
            
            <LinearLayout 
                android:layout_width="wrap_content"
      		    android:layout_height="wrap_content">      
            <CheckBox 
                android:id="@+id/kind4"
                android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="Red          "
        		android:onClick="mOnClick"/>
            <CheckBox 
                android:id="@+id/kind5"
                android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="Fortified"
        		android:onClick="mOnClick"/>
            <CheckBox 
                android:id="@+id/kind6"
                android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="Others"
        		android:onClick="mOnClick"/> 
        	</LinearLayout>
        		           
        		
        </LinearLayout>
        
        
        
        <TextView    
        android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text = "용도"
	    android:textSize = "11dip"
	    android:textStyle = "bold"
		android:textColor = "#ff282CB6"
		android:layout_marginTop="10dip"
		 />
        
    
        <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"             
        >    
            <CheckBox 
                android:id="@+id/for1"
                android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="Aperitif"
        		android:onClick="mOnClick"/>
            <CheckBox 
                android:id="@+id/for2"
                android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="Table"
        		android:onClick="mOnClick"/>
            <CheckBox 
                android:id="@+id/for3"
                android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="Dessert"
        		android:onClick="mOnClick"/>            
        		
        </LinearLayout>
        
        <TextView    
        android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text = "떨군횟수"
	    android:textSize = "11dip"
	    android:textStyle = "bold"
		android:textColor = "#ff282CB6"
		android:layout_marginTop="10dip"
		 />
        
    
        <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"             
        >    
            <CheckBox 
                android:id="@+id/dry1"
                android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="Dry"
        		android:onClick="mOnClick"/>
            <CheckBox 
                android:id="@+id/dry2"
                android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="Less dry"
        		android:onClick="mOnClick"/>
            <CheckBox 
                android:id="@+id/dry3"
                android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="Medium"
        		android:onClick="mOnClick"/>   
        		</LinearLayout>
        		
        		<LinearLayout
       	 		android:layout_width="fill_parent"
       		    android:layout_height="wrap_content"             
       		    >   
       		    
        		<CheckBox 
                android:id="@+id/dry4"
                android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="Less sweet"
        		android:onClick="mOnClick"/>
            <CheckBox 
                android:id="@+id/dry5"
                android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="Sweet"
        		android:onClick="mOnClick"/>
                   
        		
        </LinearLayout>
        
		
        
        
        
        

        
    
    
    
			
	<LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_marginTop="30dip">
        <Button
        android:id="@+id/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="mOnClick"
        android:text="완료" />
        <Button
        android:id="@+id/cancled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="mOnClick"
        android:text="취소" />
   	</LinearLayout>
    
    
    
    

</LinearLayout>

</ScrollView>